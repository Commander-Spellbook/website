{
  "name": "commander-spellbook-site",
  "version": "0.0.1",
  "private": true,
  "scripts": {
    "postinstall": "husky install && npm run pregenerate && npm run install-functions",
    "predev": "npm run download-data",
    "dev": "nuxt",
    "install-functions": "npm --prefix firebase-functions install",
    "build-functions": "npm --prefix firebase-functions run build",
    "prebuild": "prettier --write .",
    "build": "nuxt build",
    "start": "nuxt start",
    "download-data": "ts-node scripts/download-data",
    "pregenerate": "npm run download-data",
    "generate": "nuxt generate --fail-on-error",
    "generate:netlify": "mv firebase-functions/src/shared firebase-shared && rm -rf firebase-functions && mkdir -p firebase-functions/src/ && mv firebase-shared firebase-functions/src/shared && npm run generate -- -c cypress/nuxt.config.js",
    "prefirebase:emulate": "npm run build-functions",
    "firebase:emulate": "firebase emulators:start --import firebase-emulator-seed-data",
    "firebase:login": "firebase login",
    "firebase:deploy": "firebase deploy",
    "prefirebase:deploy:ci": "npm run install-functions",
    "firebase:deploy:ci": "npm run firebase:deploy:ci:local && npm run firebase:deploy:ci:prod",
    "firebase:deploy:ci:local": "npm run firebase:deploy:local -- --token \"$FIREBASE_DEPLOYMENT_TOKEN\"",
    "firebase:deploy:ci:prod": "npm run firebase:deploy:prod -- --token \"$FIREBASE_DEPLOYMENT_TOKEN\"",
    "firebase:deploy:local": "firebase deploy --project commander-spellbook-local",
    "firebase:deploy:staging": "firebase deploy --project commander-spellbook-staging",
    "firebase:deploy:prod": "firebase deploy --project commander-spellbook-prod",
    "lint:js": "eslint --ext .ts,.vue .",
    "lint:style": "stylelint **/*.{vue,css}",
    "lint": "npm run lint:js && npm run lint:style",
    "test": "jest",
    "cy:run": "cypress run --spec cypress/integration/**/*.ts",
    "pretest:integration": "npm run firebase:emulate & npm run generate -- -c cypress/nuxt.config.js",
    "test:integration": "npm start & wait-on http://localhost:3000 && wait-on http://localhost:4000 && npm run cy:run"
  },
  "lint-staged": {
    "*.{js,ts,vue}": "eslint",
    "*.{css,vue}": "stylelint"
  },
  "dependencies": {
    "@nuxtjs/firebase": "^7.6.1",
    "core-js": "^3.18.2",
    "dotenv": "^10.0.0",
    "firebase": "^8.8.1",
    "nuxt": "^2.15.8",
    "scryfall-client": "^0.19.1",
    "v-tooltip": "^2.1.3",
    "vue-gtag": "^1.16.1",
    "vue-social-sharing": "^3.0.8"
  },
  "devDependencies": {
    "@commitlint/cli": "^13.2.0",
    "@commitlint/config-conventional": "^13.2.0",
    "@nuxt/types": "^2.15.8",
    "@nuxt/typescript-build": "^2.1.0",
    "@nuxtjs/eslint-config": "^6.0.1",
    "@nuxtjs/eslint-config-typescript": "^6.0.1",
    "@nuxtjs/eslint-module": "^3.0.2",
    "@nuxtjs/google-fonts": "^1.3.0",
    "@nuxtjs/stylelint-module": "^4.0.0",
    "@nuxtjs/tailwindcss": "^4.2.1",
    "@types/jest": "^27.0.2",
    "@vue/test-utils": "^1.2.2",
    "babel-core": "7.0.0-bridge.0",
    "babel-eslint": "^10.1.0",
    "babel-jest": "^27.2.5",
    "cross-env": "^7.0.3",
    "cypress": "^8.5.0",
    "cypress-firebase": "^2.0.0",
    "eslint": "^7.32.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-nuxt": "^2.0.0",
    "eslint-plugin-prettier": "^4.0.0",
    "firebase-admin": "^10.0.0",
    "firebase-tools": "^9.18.0",
    "flush-promises": "^1.0.2",
    "husky": "^7.0.2",
    "jest": "^27.2.5",
    "lint-staged": "^11.2.0",
    "postcss": "^8.3.9",
    "prettier": "^2.4.1",
    "stylelint": "^13.13.1",
    "stylelint-config-prettier": "^8.0.2",
    "stylelint-config-standard": "^22.0.0",
    "ts-jest": "^27.0.5",
    "ts-node": "^10.2.1",
    "vue-jest": "^3.0.4",
    "wait-on": "^6.0.0"
  }
}
