{
  "name": "commander-spellbook-site",
  "version": "0.0.1",
  "private": true,
  "workspaces": [
    "frontend"
  ],
  "scripts": {
    "postinstall": "husky install",
    "predev": "npm run download-data",
    "dev": "npm run dev --workspace=frontend",
    "build": "npm run build --workspace=frontend",
    "prettier": "prettier --write .",
    "download-data": "ts-node scripts/download-data",
    "workflow:create-workflow-id": "ts-node scripts/create-workflow-id",
    "discord-webhook:start-deploy": "ts-node scripts/discord-webhooks/start-deploy.ts",
    "discord-webhook:cancel-deploy": "ts-node scripts/discord-webhooks/cancel-deploy.ts",
    "discord-webhook:failed-deploy": "ts-node scripts/discord-webhooks/failed-deploy.ts",
    "discord-webhook:finish-deploy": "ts-node scripts/discord-webhooks/finish-deploy.ts",
    "check-changelog": "ts-node scripts/check-changelog",
    "start": "npm start --workspace=frontend",
    "lint": "eslint --ext .ts,.js scripts cypress && npm run lint --workspaces --if-present",
    "test": "npm test --workspaces --if-present",
    "test:watch-frontend": "npm test --workspace frontend -- --watch --collectCoverage=false",
    "cy:run": "cypress run",
    "pretest:integration": "NODE_ENV=development npm run build",
    "test:integration": "npm start & wait-on http://localhost:3000 && npm run cy:run"
  },
  "lint-staged": {
    "*.{js,ts,vue}": "eslint",
    "*.{css,vue}": "stylelint"
  },
  "dependencies": {
    "dotenv": "^16.0.3",
    "scryfall-client": "^0.23.1"
  },
  "devDependencies": {
    "@commitlint/cli": "^17.4.4",
    "@commitlint/config-conventional": "^17.4.4",
    "cypress": "^12.6.0",
    "eslint-config-prettier": "^8.7.0",
    "husky": "^8.0.3",
    "lint-staged": "^13.1.2",
    "prettier": "^2.8.4",
    "ts-node": "^10.9.1",
    "wait-on": "^7.0.1"
  }
}
